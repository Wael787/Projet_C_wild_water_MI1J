CC = gcc
CFLAGS = -Wall -Wextra -O2 -std=c99
BINDIR = bin
SRCDIR = src

$(BINDIR):
	mkdir -p $(BINDIR)

all: histo leaks

histo: $(SRCDIR)/histo.c | $(BINDIR)
	$(CC) $(CFLAGS) -o $(BINDIR)/histo $(SRCDIR)/histo.c

leaks: $(SRCDIR)/fuites.c | $(BINDIR)
	$(CC) $(CFLAGS) -o $(BINDIR)/leaks $(SRCDIR)/fuites.c

clean:
	rm -rf $(BINDIR)

.PHONY: all clean histo leaks
